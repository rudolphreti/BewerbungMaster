@using BewerbungMasterApp.Models
@using BewerbungMasterApp.Components.Pages

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Position</th>
                <th>Company</th>
                <th>Type</th>
                <th>URL</th>
                <th>Path</th>
                <th>Actions</th>
                <th>Messages</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in JobApplications)
            {
                <JobApplicationRow Job="job"
                                       JobApplications="JobApplications"
                                       JobAppContents="JobAppContents"
                                       OnUpdate="OnUpdate"
                                       OnDelete="OnDelete"
                                       OnMove="OnMove" />
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter] public List<JobApplication> JobApplications { get; set; } = new();
    [Parameter] public List<JobAppContent> JobAppContents { get; set; } = new();
    [Parameter] public EventCallback OnUpdate { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }
    [Parameter] public EventCallback OnMove { get; set; }
}